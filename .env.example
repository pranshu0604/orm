# Environment variables for PRAN (Public Reputation and Analysis Node)

# Node environment
# Set to 'development' for local development (enables Playwright for Nitter scraping)
# In production (Vercel), this will be set to 'production' automatically
NODE_ENV=development

# Database connection
DATABASE_URL=""

# Authentication - Clerk
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""

# API Keys / Service URLs
# The project now uses a separate FastAPI-based AI microservice located at `../ai`.
# Set this to the AI microservice base URL (for local dev: http://localhost:8000)
AI_SERVICE_URL="http://localhost:8000"

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Twitter/X OAuth
TWITTER_API_KEY=""
TWITTER_API_SECRET=""

# Security
ENCRYPTION_SECRET_KEY=""

# NextAuth
NEXTAUTH_URL=""
NEXTAUTH_SECRET=""

# Redis (for Nitter instance caching)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
